
{{#partial "head_content"}}
		<title>Open Data Policing</title>
		<meta name="description" content="">
		<meta name="author" content="">
		<meta name="keywords" content="">
		<script src="{{staticBaseUrl}}/js/sockjs.js"></script>
		<script src="{{staticBaseUrl}}/js/vertx-eventbus.js"></script>
		<script src="{{staticBaseUrl}}/js/enUS/SiteAgencyPage.js"></script>
		<script src="{{staticBaseUrl}}/js/jQuery-Autocomplete/jquery.autocomplete.js"></script>

		<script>
		$(function() {
			$( "#tabsAgencies" ).tabs();
			$( "#suggestSiteAgencyInput" ).autocomplete({
				minChars: 1
				, dataType: "json"
				, serviceUrl: "/api/agency"
				, paramName: "q"
				, paramPrefix: "objectSuggest:"
				, onSelect: function(suggestion) {
					window.location.href = "/report?var=stateAbbreviation:" + encodeURIComponent(suggestion.data.stateAbbreviation) + "&var=agencyTitle:" + encodeURIComponent(suggestion.data.agencyTitle);
				}
				, transformResult: function(response) {
					return {
						suggestions: jQuery.map(response.list, function(item) {
							return {
								value: item.agencyTitle
								, data: item
								, id: item.pk
							};
						})
					};
				}
			});
		});
		</script>
{{/partial}}

{{#partial "body_content"}}
	<div id='wrap'>

		<div class="w3-top w3-2017-navy-peony ">
			<div class="w3-bar w3-content ">
				<div class="w3-dropdown-hover w3-hide-medium w3-hide-large ">
					<button class="w3-button ">
						<i class="fas fa-bars"></i>
					</button>
					<div class="w3-dropdown-content w3-bar-block w3-card-4 ">
						<a class="w3-bar-item w3-button " href="/about">About</a>
					</div>
				</div>
				<a class="w3-bar-item w3-button font-weight-bold " href="/">Open Data Policing</a>
				<a class="w3-bar-item w3-hide-small " href="/about">About</a>
			</div>
		</div>

		<div class="w3-2017-navy-peony w3-padding-32 ">
			<div class="w3-content w3-center ">
				<div class="w3-row ">
					<div class="w3-left ">
						<h1>Find a Traffic Stop</h1>
					</div>
					<div class="w3-right ">
						<a class="w3-btn w3-round w3-border w3-indigo " href="/agency-search">Find an Agency</a>
					</div>
				</div>
			</div>
		</div>

		<div class="w3-light-gray ">
			<div class="w3-content ">
				<div id="w3-row ">
					<div class="w3-half w3-padding ">
						<h3 class="w3-center ">Basic Search</h3>
						<div class="">
							<div class="w3-row ">
								<div class="w3-rest ">
									<div class="font-weight-bold ">Agency name</div>
									<div>
										<input type="text" placeholder="Agency Name" class="w3-input w3-border " name="agencySuggest" id="suggestSiteAgencyInput"/>
									</div>
									<div class="w3-text-gray ">ex: Durham Police Department</div>
								</div>
							</div>
							<div class="w3-row ">
								<div class="w3-half ">
									<div class="font-weight-bold ">Start date</div>
									<div>
										<input type="text" placeholder="Start date" id="startDateInput" class="w3-input w3-border " name="startDate"/>
									</div>
									<div class="w3-text-gray ">ex: 8/13/2013</div>
								</div>
								<div class="w3-half ">
									<div class="font-weight-bold ">End date</div>
									<div>
										<input type="text" placeholder="End date" id="endDateInput" class="w3-input w3-border " name="endDate"/>
									</div>
									<div class="w3-text-gray ">ex: 8/13/2013</div>
								</div>
							</div>
							<div class="w3-row ">
								<div class="w3-quarter ">
									<div class="font-weight-bold ">Age</div>
									<div>
										<input type="number" placeholder="Age" id="ageInput" class="w3-input w3-border " name="age" max="130" min="0"/>
									</div>
								</div>
								<div class="w3-quarter ">
									<div class="font-weight-bold ">Gender</div>
									<div>
										<select id="genderInput" class="w3-input " name="gender"/>
											<option value="" selected="selected">---</option>
											<option value="M">Male</option>
											<option value="F">Female</option>
										</select>
									</div>
								</div>
							</div>
							<div class="w3-row ">
								<div class="w3-half ">
									<div class="font-weight-bold ">Race</div>
									<div>
										<select type="text" placeholder="Race" id="raceInput" class="w3-input w3-border " name="race">
											<option value="">---</option>
											{{#each personRaceTitles}}
											<option value="{{this}}"{{#ifeq this race}} selected="selected"{{else}}{{/ifeq}}>{{this}}</option>
											{{/each}}
										</select>
									</div>
								</div>
							</div>
							<div class="w3-row ">
								<div class="w3-right-align ">
									<button class="w3-btn w3-round w3-border w3-indigo " type="submit">Search</button>
								</div>
							</div>
						</div>
					</div>
					<div class="w3-half w3-padding ">
						<h3 class="w3-center ">Basic Search</h3>
						<div class="">
							<div class="w3-row ">
								<div class="w3-rest ">
									<div class="font-weight-bold ">Officer ID</div>
									<div>
										<input type="text" placeholder="Officer ID" class="w3-input w3-border " name="stopOfficerId" value="{{stopOfficerId}}"/>
									</div>
									<div class="w3-text-gray ">ex: 227</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="w3-light-gray ">
			<div class="w3-content ">
				<table class="w3-table w3-bordered "
					<thead>
						<tr>
							<th class="font-weight-bold ">Date</th>
							<th class="font-weight-bold ">Gender</th>
							<th class="font-weight-bold ">Race</th>
							<th class="font-weight-bold ">Age</th>
							<th class="font-weight-bold ">Agency</th>
							<th class="font-weight-bold ">Officer ID</th>
						</tr>
					</thead>
					<tbody>
						{{#each stops}}
						<tr>
							<td>{{stopDateTime}}</td>
							<td>{{#each personGenderTitles}}{{#if @first}}{{else}}, {{/if}}{{this}}{{/each}}</td>
							<td>{{#each personRaceTitles}}{{#if @first}}{{else}}, {{/if}}{{this}}{{/each}}</td>
							<td>{{#each personAges}}{{#if @first}}{{else}}, {{/if}}{{this}}{{/each}}</td>
							<td>{{agencyTitle}}</td>
							<td>{{stopOfficerId}}</td>
						</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{{/partial}}
{{> base-page}}

